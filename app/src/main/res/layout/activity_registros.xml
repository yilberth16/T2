<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registros"
    >


<EditText
    android:id="@+id/edt_filtrar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Ingrese el nombre"/>



        <ListView
            android:dividerHeight="0dp"
            android:id="@+id/lista_contacto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edt_filtrar"
            android:layout_marginStart="8dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="8dp"

            >




        </ListView>





<LinearLayout
    android:orientation="vertical"
    android:layout_below="@+id/lista_contacto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/lay_1"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/ordenar_saldo"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ordenar por saldo"
            android:textSize="18dp"
            android:textColor="@android:color/black"
            />
    </LinearLayout>


</LinearLayout>


</RelativeLayout>